{
  "compilerOptions": {
    "target": "ES5",                       // Puedes cambiar a ES6 o superior si lo prefieres
    "module": "ES6",                       // Usa el m贸dulo adecuado para tu configuraci贸n
    "moduleResolution": "node",
    "lib": ["ES2017", "DOM"],              // Incluye las bibliotecas que necesites
    "declaration": true,                   // Genera archivos .d.ts
    "declarationMap": true,                // Opcional: Genera mapas de declaraci贸n para depuraci贸n
    "outDir": "./dist",                    // Directorio de salida
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],                 // Incluye todos los archivos en src
  "exclude": ["node_modules", "dist"]      // Excluye node_modules y dist
}
